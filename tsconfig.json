{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "moduleResolution": "node",
        "sourceMap": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "noImplicitAny": true,
        "suppressImplicitAnyIndexErrors": true,

        "strictNullChecks": true,
        "declaration": true,
        "removeComments": false,
        "noUnusedLocals": true,
        //"importHelpers": true,

        "typeRoots": [
            "./node_modules/@types"
        ],
        "lib": [
            "es2017",
            "dom"
        ]
    },
    "include": [
        "./examples/**/*",
        "./src/**/*"
    ]
}